<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_baca_dmasuk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.go.manadokota.e_office.BacaDmasukActivity"
    android:scrollbars="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/srlRefresh">

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:id="@+id/wrapper"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Detail Disposisi"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:padding="10dp"
                            android:layout_weight="1.2"/>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <net.colindodd.toggleimagebutton.ToggleImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tib_drawable_on="@drawable/ic_star_black"
                                app:tib_drawable_off="@drawable/ic_star_white"
                                android:id="@+id/btnStarred"
                                android:layout_marginLeft="50dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="right"/>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#5555"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:shrinkColumns="*">

                        <TableRow>
                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:text="Pengirim "
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txNamaPengirim"
                                android:text="Bobby Najoan"/>
                        </TableRow>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="#5555"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Kirim "
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txTanggalKirim"
                                android:text="2017-06-11"/>
                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="#5555"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Instruksi"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txInstruksi"
                                android:text="Diketahui"/>
                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="#5555"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>


                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Selesai "
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txTanggalSelesai"
                                android:text="2017-06-27"/>
                        </TableRow>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="#5555"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Keamanan "
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txKeamanan"
                                android:text="2017-06-11"/>
                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="#5555"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kecepatan "
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txKecepatan"
                                android:text="2017-06-11"/>
                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="#5555"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lampiran "
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txLampiran"
                                android:text="Tidak ada lampiran"/>
                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="#5555"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Isi disposisi "
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txIsiDisposisi"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"/>
                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="#5555"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Follow Up "
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txFollowUp"
                                android:text="- [Anda] Siap laksanakan\n- [Bobby Najoan] Jangan lupa disertakan dengan dokumen\n-[Anda] Iyaa, sementara dikerjakan pak"/>
                        </TableRow>

                        <TableRow>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:hint="Ketik follow up"
                                android:textSize="13sp"
                                android:id="@+id/etFollowUp"
                                android:layout_span="2"/>
                        </TableRow>

                        <TableRow>
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_span="2"
                                android:text="Kirim"
                                android:id="@+id/btnKirimFollowUp"
                                style="@style/Widget.AppCompat.Button.Colored"/>
                        </TableRow>


                    </TableLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#5555"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lampiran Surat Terkait"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:padding="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#5555"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:shrinkColumns="*"
                        android:id="@+id/tlLampiranSurat">

                        <TableRow>
                            <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Perihal "
                            android:textStyle="bold"/>
                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txPerihalSurat"
                            android:text="Bobby Najoan"/>
                        </TableRow>

                        <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.7dp"
                        android:background="#5555"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                        <TableRow>
                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu Kirim "
                            android:textStyle="bold"/>
                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txWaktuKirimSurat"
                            android:text="2017-06-11"/>
                        </TableRow>

                        <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="#5555"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit"
                            android:id="@+id/txIsiSurat"/>

                    </TableLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txSuratTidakAda"
                        android:text="Tidak ada lampiran surat"
                        android:textSize="17dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
