<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemView">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:elevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="1dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Perihal : "
                    android:textStyle="bold"
                    android:layout_weight="5"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Bobby Najoan"
                    android:layout_weight="1"
                    android:id="@+id/txPerihal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengirim : "
                    android:textStyle="bold"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Bobby Najoan"
                    android:layout_weight="1"
                    android:id="@+id/txNamaPengirim"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Instruksi :  "
                    android:textStyle="bold"
                    android:layout_weight="3"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Diperhatikan"
                    android:layout_weight="1"
                    android:id="@+id/txInstruksiDisposisi"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Waktu Kirim :  "
                    android:textStyle="bold"
                    android:layout_weight="3"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="20 Mei 2017"
                    android:layout_weight="1"
                    android:id="@+id/txWaktuKirim"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="5dp"
                android:background="#999999"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/btnActions"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Baca"
                    android:id="@+id/btnBaca"
                    android:background="#8ad919"
                    android:textColor="#ffffff"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Hapus"
                    android:id="@+id/btnHapus"
                    android:background="#e74c3c"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"/>

                <net.colindodd.toggleimagebutton.ToggleImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tib_drawable_on="@drawable/ic_star_black"
                    app:tib_drawable_off="@drawable/ic_star_white"
                    android:id="@+id/btnStarred"
                    android:layout_marginLeft="50dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>